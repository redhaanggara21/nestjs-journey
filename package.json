{
  "name": "nest-journey",
  "version": "0.0.1",
  "description": "nest boiler",
  "author": "redhabayuanggara@gmail.com",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "NODE_ENV=local nest start",
    "start:development": "NODE_ENV=development nest start --watch",
    "start:local": "NODE_ENV=local nest start --watch",
    "start:test": "NODE_ENV=test nest start --watch",
    "start:staging": "NODE_ENV=staging nest start --watch",
    "start:production": "NODE_ENV=production node dist/main",
    "clean:registry": "rm -rf node_modules package-lock.json dist && npm cache clean --force",
    "prestart:build": "rm -rf node_modules package-lock.json dist && npm cache clean --force && npm install && npm run build",
    "start:debug": "nest start --debug --watch",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "typeorm": "ts-node ./node_modules/typeorm/cli",
    "knex": "knex --knexfile knexfile.ts",
    "run:pg-docker": "docker run -it --rm --name pg-docker -e POSTGRES_PASSWORD=docker -p 5432:5432 postgres:10",
    "stop:pg-docker": "docker kill pg-docker",
    "migrate:make": "node -r dotenv/config ./node_modules/knex/bin/cli.js migrate:make --knexfile knexfile.ts",
    "migrate": "node -r dotenv/config ./node_modules/knex/bin/cli.js migrate:latest --knexfile knexfile.ts",
    "migrate:rollback": "node -r dotenv/config ./node_modules/knex/bin/cli.js migrate:rollback --knexfile knexfile.ts",
    "seed:make": "node -r dotenv/config ./node_modules/knex/bin/cli.js seed:make --knexfile knexfile.ts",
    "seed": "node -r dotenv/config ./node_modules/knex/bin/cli.js seed:run --knexfile knexfile.ts"
  },
  "dependencies": {
    "@hapi/joi": "^17.1.1",
    "@nestjs/common": "^9.0.0",
    "@nestjs/config": "^2.2.0",
    "@nestjs/core": "^9.0.0",
    "@nestjs/platform-express": "^9.0.0",
    "@nestjs/typeorm": "^9.0.1",
    "@types/hapi__joi": "^17.1.8",
    "@types/pg": "^8.6.5",
    "build": "^0.1.4",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.13.2",
    "dotenv": "^16.0.3",
    "joi": "^17.6.2",
    "knex": "^2.3.0",
    "mysql": "^2.18.1",
    "mysql2": "^2.3.3",
    "nestjs-easyconfig": "^2.6.1",
    "nestjs-knex": "^2.0.0",
    "npm": "^8.19.2",
    "pg": "^8.8.0",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "run": "^1.4.0",
    "rxjs": "^7.2.0",
    "typeorm": "^0.3.10"
  },
  "devDependencies": {
    "@nestjs/cli": "^9.0.0",
    "@nestjs/schematics": "^9.0.0",
    "@nestjs/testing": "^9.0.0",
    "@types/express": "^4.17.13",
    "@types/jest": "28.1.4",
    "@types/node": "^16.11.65",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^8.0.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "28.1.2",
    "prettier": "^2.3.2",
    "source-map-support": "^0.5.20",
    "supertest": "^6.1.3",
    "ts-jest": "28.0.5",
    "ts-loader": "^9.2.3",
    "ts-node": "^10.0.0",
    "tsconfig-paths": "4.0.0",
    "typescript": "^4.3.5"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
